@model DemoMVC.Models.Bmi

<h2>Tính chỉ số BMI</h2>

<form asp-controller="Bmi" asp-action="Index" method="post">
    <div>
        <label asp-for="Weight">Cân nặng (kg):</label>
        <input asp-for="Weight" type="number" step="0.1" required />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Height">Chiều cao (m):</label>
        <input asp-for="Height" type="number" step="0.01" required />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <br />
    <button type="submit">Tính BMI</button>
</form>

@if (Model != null && Model.BmiValue > 0)
{
    <hr />
    <h3>Kết quả:</h3>
    <p>Chỉ số BMI của bạn là: <strong>@Model.BmiValue.ToString("0.00")</strong></p>
    <p>Phân loại: <strong>@Model.Result</strong></p>
}